<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.ddschool.lib.view.RoundedCornerImageView
        android:id="@+id/nav_head_useravatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/nav_head_avatar" />
    <TextView
        android:id="@+id/nav_head_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/nav_head_useravatar"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="张三"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nav_head_userrole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_head_username"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/nav_head_useravatar"
        android:gravity="center_vertical"
        android:text="老师  "
        android:textColor="#fdfdfd"
        android:textSize="18sp"
        android:theme="@android:style/Theme.Translucent" />

    <ImageView
        android:id="@+id/nav_head_erweima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nav_head_username"
        android:src="@mipmap/two_divisions"
        android:theme="@android:style/Theme.Translucent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_head_username"
        android:background="@null"
        android:layout_toRightOf="@+id/nav_head_userrole"
        android:src="@mipmap/nav_head_changerole"
        android:theme="@android:style/Theme.Translucent"/>
</RelativeLayout>
