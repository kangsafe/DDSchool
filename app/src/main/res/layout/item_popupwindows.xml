<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_transparent">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:orientation="vertical">
        <!--android:background="@drawable/bt_nobgd"-->
        <Button
            android:id="@+id/item_popupwindows_Photo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_button_item_popupwindows_phone"
            android:text="从手机中选取"
            android:textColor="@color/blue2"
            android:textSize="18sp"
            android:topLeftRadius="10dip"
            android:topRightRadius="10dip" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/devide_line" />

        <Button
            android:id="@+id/item_popupwindows_server"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/common_title"
            android:text="精美配图"
            android:textColor="@color/blue2"
            android:textSize="18sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/devide_line" />

        <Button
            android:id="@+id/item_popupwindows_camera"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_button_item_popupwindows_camera"
            android:bottomLeftRadius="10dip"
            android:bottomRightRadius="10dip"
            android:text="拍照"
            android:textColor="@color/blue2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_button_item_popupwindows_cancel"
            android:text="取消"
            android:textColor="@color/blue2"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>